{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="border border-dark rounded bg-secondary text-white text-center p-2 d-block mb-5 mt-5">Inscription adhérent</h1>
    </div>

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {# Affichage du formulaire d'inscription #}
    <section class="container mediumFormSize">
        {{ form_start(registrationForm) }}
            <div class="row p-2">
                <div class="col-12 col-md-6">
                    {{ form_row(registrationForm.last_name, {label: 'Nom'})}}
                    {{ form_row(registrationForm.first_name, {label: 'Prénom'}) }}
                    {{ form_row(registrationForm.address, {label: 'Adresse'}) }}
                    {{ form_row(registrationForm.phone, {label: 'Téléphone'}) }}
                    {{ form_row(registrationForm.rgpd_validation, {label: 'Validation RGPD concernant l\'utilisation de vos données'}) }}
                </div>
                <div class="col">
                    {{ form_row(registrationForm.email, {label: 'Email'}) }}
                    {{ form_row(registrationForm.plainPassword) }}
                    <button type="submit" class="btn btn-secondary">S'inscrire</button>
                </div>
            </div>
        {{ form_end(registrationForm) }}
    </section>
{% endblock %}
